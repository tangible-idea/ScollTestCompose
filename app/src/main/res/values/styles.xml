<?xml version="1.0" encoding="utf-8"?>

<resources>


    <!-- 공통 타이틀 text -->
    <style name="TextTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coolgray7_21252c</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- tab line 스타일 -->
    <style name="App.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/background_white</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicatorColor">@color/primary_sub_5d88fb</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMinWidth">93dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/font_point_blue</item>
        <item name="tabTextAppearance">@style/App.TabLayout.TextAppearance</item>
        <item name="tabTextColor">@color/font_body</item>
    </style>

    <style name="App.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeCustom.TabLayout" parent="Theme.MaterialComponents.Light"/>


</resources>